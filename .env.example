# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/suzaa_core?schema=public"

# Redis
REDIS_URL=redis://localhost:6379

# Security - JWT & Authentication
# IMPORTANT: Generate strong secrets for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production
JWT_EXPIRES_IN=7d
API_KEY_SALT=your-api-key-salt-change-in-production
PLUGIN_HMAC_SECRET=your-plugin-hmac-secret-change-in-production

# Bcrypt - Number of rounds for password hashing
BCRYPT_ROUNDS=10

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Cache TTL (in seconds)
CACHE_PLUGIN_WALLETS_TTL=60
CACHE_PRICE_TTL=300

# PIN Settings
PIN_EXPIRY_MINUTES=10
PIN_MAX_ATTEMPTS=5

# Payment Settings
PAYMENT_DEFAULT_EXPIRY=60
PAYMENT_MAX_EXPIRY=1440
PAYMENT_MIN_EXPIRY=5

# Email Settings (for future implementation)
EMAIL_ENABLED=false
EMAIL_FROM=noreply@suzaa.com
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=user
# EMAIL_SMTP_PASS=password

# Logging
LOG_LEVEL=debug
